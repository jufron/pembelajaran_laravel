            "description": "mendapatkan data berdasarkan firstname atau lastname",
            "required": false,
            "schema":{
              "type": "string"
            }
          },
          {
            "name": "phone",
            "in": "query",
            "description": "mendapatkan data berdasarkan nomor ponsel",
            "required": false,
