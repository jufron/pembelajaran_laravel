{
  "openapi":"3.0.2",
  "info": {
    "title":"API for contact service",
    "version":"1.0"
  },
  "servers": [
    {
      "url":"https://localhost:8000",
      "description": "adalah url server untuk seluruh service yang ada"
    }
  ],
  "paths": {
    "/api/contacts": {
      "post":{
        "description": "membuat contact baru",
        "parameters": [
          {
            "$ref": "#/components/parameters/authorization"
          }
        ],
        "requestBody":{
          "description": "request body untuk membuat contact baru",
          "required": true,
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName":{
                    "type": "string"
                  },
                  "email":{
                    "type": "string"
                  },
                  "phone":{
                    "type": "string"
                  },
                  "address":{
                    "type": "string"
                  }
                }
              },
              "examples": {
                "james":{
                  "description": "contoh untuk james",
                  "value":{
                    "firstName": "james",
                    "lastname": "maubila",
                    "email": "james maubila",
                    "phone": "081234567899"
                  }
                },
                "putri":{
                  "description": "contoh untuk putri",
                  "value":{
                    "firstName": "putri",
                    "lastname": "rahmatia",
                    "email": "putri rahmatia",
                    "phonr": "081234567888"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "berhasil menyimpan data ke sistem",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "firstName": {
                          "type": "string"
                        },
                        "lastName": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "address": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "application/json": {
                    "status": 200,
                    "message": "berhasil menyimpan data ke sistem",
                    "data": {
                      "id": 1,
                      "firstName": "james",
                      "lastName": "maubila",
                      "email": "johndoe@example.com",
                      "address": "sikumana"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get":{
        "description": "mendapatkan contact dan melakukan pencarian",
        "parameters": [
          {
            "$ref": "#/components/parameters/authorization"
