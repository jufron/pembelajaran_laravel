          }
        ],
        "responses": {
          "200": {
            "description": "berhasil menyimpan data ke sistem",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
