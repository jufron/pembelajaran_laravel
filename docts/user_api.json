  "paths": {
    "/api/user/register": {
      "summary": "path api user register",
      "description": "path tersebut untuk melakukan registrasi user yang baru",
      "post": {
        "description": "melakukan aksi register",
        "requestBody": {
          "description": "request body untuk post",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "name"],
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "jufron": {
                  "description": "username for jufron",
                  "value": {
                    "username": "jufron",
                    "password": "12345678",
                    "name": "jufron"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "successfull register response",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "username": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "description": "success register user",
                    "value": {
                      "data": {
                        "id": 1,
                        "name": "jufron",
                        "username": "jufron"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "validasi gagal",
            "content": {
              "application/json": {
                "examples": {
                  "validationError": {
                    "description": "validation error",
                    "value": {
                      "errors": {
                        "username": [
                          "username required",
                          "username max 3 charackter"
                        ],
                        "password": [
                          "password required",
                          "password have symbol",
                          "password have number"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/resourceNotFount"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/api/user/login": {
      "summary": "path api user login",
      "description": "path tersebut untuk melakukan login pada user yang sudah teregistrasi",
      "post": {
