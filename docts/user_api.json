          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "berhasil melakukan login akan mengembalikan respnse berhasil dengan data sebagai berikut",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["id", "name", "username", "token"],
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "username": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "token": {
                          "type": "string"
                        }
                      }
                    },
                    "errors": {
                      "type": "array"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "description": "success register user",
                    "value": {
                      "data": {
                        "id": 1,
                        "name": "jufron",
                        "username": "jufron",
                        "token": "12jfie12pfsdkfopevnri2"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/resourceNotFount"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
